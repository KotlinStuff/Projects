<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_item"
        android:padding="15dp"
        android:layout_margin="5dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp"
        android:focusable="true">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:id="@+id/root_layout_cv"
            android:background="@android:color/holo_orange_light">

        <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/iv_animalImage"
                android:contentDescription="@string/desc_image"
                app:srcCompat="@mipmap/ic_launcher_round"/>
        <TextView
                android:text="@string/name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_nameAnimal"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/iv_animalImage"
                android:textSize="30sp"/>
        <TextView
                android:text="@string/latin_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_latinName"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/iv_animalImage"
                android:layout_below="@id/tv_nameAnimal"
                android:textSize="18sp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>